<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_profile"
    tools:openDrawer="start"
    android:id="@+id/drawer">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ppTopNavBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_theme"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomNavBar"
            android:layout_below="@+id/ppTopNavBar"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/silverCard"
                    android:layout_marginBottom="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/new_theme"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/user" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Martha Nielsen"
                                android:gravity="bottom"
                                android:textSize="35sp"
                                android:textColor="#FFFFFF"
                                android:layout_marginLeft="15dp"
                                android:textStyle="italic"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Credits : "
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="250"
                                android:textSize="15sp"
                                android:textColor="#FFFFFF"
                                android:gravity="end"
                                android:backgroundTint="#FFFFFF"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email : "
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="martha_nielsen@gmail.com"
                                android:textSize="15sp"
                                android:textColor="#FFFFFF"
                                android:gravity="end"
                                android:backgroundTint="#FFFFFF"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mobile No : "
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+919826372663"
                                android:textSize="15sp"
                                android:textColor="#FFFFFF"
                                android:gravity="end"
                                android:backgroundTint="#FFFFFF"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="City : "
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Chennai"
                                android:textSize="15sp"
                                android:textColor="#FFFFFF"
                                android:gravity="end"
                                android:backgroundTint="#FFFFFF"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address : "
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No. 9, Alfred Street, Chennai 600028"
                                android:textSize="15sp"
                                android:textColor="#FFFFFF"
                                android:gravity="end"
                                android:backgroundTint="#FFFFFF"/>


                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:text="Update"
                        android:backgroundTint="#D63939"
                        android:textColor="#FFFF"
                        android:background="@drawable/round_button"
                        >
                    </Button>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:text="Load Credits"
                            android:backgroundTint="#D63939"
                            android:textColor="#FFFF"
                            android:background="@drawable/round_button"
                            >
                        </Button>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_drawer"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/sidemenu"
        android:layout_gravity="start"
        app:itemIconTint="@drawable/drawer_item_color"
        app:itemTextColor="@drawable/drawer_item_color"/>


</androidx.drawerlayout.widget.DrawerLayout>